
shared_ldadd = src/iofwdevent/libiofwdevent.a \
	       src/iofwdutil/libiofwdutil.a \
	       $(BOOST_DATE_TIME_LIB) \
	       $(BOOST_UNIT_TEST_FRAMEWORK_LIB) \
	       $(BOOST_THREAD_LIB) \
	       $(BOOST_REGEX_LIB)
shared_ldflags =  $(BOOST_LDFLAGS)

TESTS += test/boost/iofwdevent-resource
